extends layout

block content
  .container
    h1 Регистрация
    p.lead Попробуй зарегистрироваться
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Придумай логин').form-group
          input.form-control(type='text', name="e_mail", placeholder='Введи свой e-mail ')
      .form-group
          input.form-control(type='password', name="password", placeholder='Пароль тоже придется придумать').form-group
          //- label К какому полу вы принадлежите:
          //- select.form-control
          //-   option(value="man") Man
          //-   option(value="woman") Woman

      button.btn.btn-default(type='submit') Регистрация
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Отменить
    